<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Security Configuration for Static HTML Directory -->
        <!-- This file provides security measures when served by IIS web server -->
        
        <!-- Security headers -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data:;" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Hide server information -->
        <security>
            <requestFiltering removeServerHeader="true" />
        </security>
        
        <!-- Prevent access to sensitive files -->
        <staticContent>
            <mimeMap fileExtension=".env" mimeType="text/plain" />
            <mimeMap fileExtension=".log" mimeType="text/plain" />
        </staticContent>
        
        <!-- URL rewrite rules for security -->
        <rewrite>
            <rules>
                <!-- Block access to hidden files -->
                <rule name="Block hidden files" stopProcessing="true">
                    <match url="^\..*" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access denied" />
                </rule>
                
                <!-- Block access to backup files -->
                <rule name="Block backup files" stopProcessing="true">
                    <match url=".*\.(bak|backup|old|tmp|temp|log)$" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access denied" />
                </rule>
                
                <!-- Block access to configuration files -->
                <rule name="Block config files" stopProcessing="true">
                    <match url=".*\.(env|ini|conf|config)$" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access denied" />
                </rule>
                
                <!-- Block access to source code files -->
                <rule name="Block source files" stopProcessing="true">
                    <match url=".*\.(py|php|rb|pl|sh|bat)$" />
                    <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access denied" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Disable directory browsing -->
        <directoryBrowse enabled="false" />
        
        <!-- Custom error pages -->
        <httpErrors>
            <remove statusCode="403" />
            <remove statusCode="404" />
            <error statusCode="403" path="/error/403.html" responseMode="File" />
            <error statusCode="404" path="/error/404.html" responseMode="File" />
        </httpErrors>
    </system.webServer>
</configuration>